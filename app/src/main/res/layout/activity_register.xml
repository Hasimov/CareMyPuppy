<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="@color/colorPrimary"
    tools:context="com.carepuppy.pirtu.caremypuppy.RegisterActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Registro"
        android:textSize="45dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/lightGreen"
        android:textAlignment="center"
        android:layout_marginTop="25dp"
        android:id="@+id/tVregRegistro"
        android:layout_centerHorizontal="true" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eTregNombre"
        android:hint="Nombre"
        android:textSize="25dp"
        android:textColor="@android:color/white"
        android:textColorHint="@color/colorAccent"
        android:textAlignment="center"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tVregRegistro"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eTregApellidos"
        android:hint="Apellidos"
        android:textSize="25dp"
        android:textColor="@android:color/white"
        android:textColorHint="@color/colorAccent"
        android:textAlignment="center"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/eTregNombre"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eTregemail"
        android:hint="email"
        android:textSize="25dp"
        android:textColor="@android:color/white"
        android:textColorHint="@color/colorAccent"
        android:textAlignment="center"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/eTregApellidos"
        android:layout_marginBottom="20dp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eTregPass1"
        android:hint="contraseña"
        android:textSize="25dp"
        android:textColor="@android:color/white"
        android:textColorHint="@color/colorAccent"
        android:textAlignment="center"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/eTregemail"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eTregPass2"
        android:hint="repetir contraseña"
        android:textSize="25dp"
        android:textColor="@android:color/white"
        android:textColorHint="@color/colorAccent"
        android:textAlignment="center"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/eTregPass1"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="wuau !"
        android:id="@+id/btnReg"
        android:textSize="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:background="@drawable/gradient_button_register"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/eTregPass2"
        android:layout_alignStart="@+id/eTregemail"
        android:layout_alignEnd="@+id/eTregemail" />

</RelativeLayout>
