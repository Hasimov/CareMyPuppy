<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@drawable/gradient_login"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tVName"
        android:text="Care my Puppy"
        android:textSize="45dp"
        android:layout_marginTop="22dp"
        android:layout_centerHorizontal="true"
        />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iVlogo"
        android:src="@drawable/doghouse"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tVName"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:id="@+id/eTemail"
        android:hint="usuario@gmail.com"
        android:textSize="30dp"
        android:layout_margin="15dp"
        android:textColor="@android:color/white"
        android:layout_below="@+id/iVlogo"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:textSize="30dp"
        android:id="@+id/eTpass"
        android:hint="contraseÃ±a"
        android:layout_below="@+id/eTemail"
        android:layout_centerHorizontal="true"
        android:layout_alignStart="@+id/buttonLogin"
        android:layout_alignEnd="@+id/buttonLogin"
        android:textAlignment="center" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textSize="22dp"
        android:background="@drawable/gradient_button_login"
        android:id="@+id/buttonLogin"
        android:layout_below="@+id/eTpass"
        android:layout_marginTop="25dp"
        android:layout_alignEnd="@+id/eTemail"
        android:layout_alignStart="@+id/eTemail" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:text="@string/registro"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:background="?android:attr/selectableItemBackground"
        android:id="@+id/buttonRegistro"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/buttonLogin"
        />


</RelativeLayout>
